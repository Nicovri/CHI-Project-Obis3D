<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ProgressBar fx:id="timelineProgressBar" maxWidth="1.7976931348623157E308" progress="0.0" />
      <HBox alignment="CENTER" spacing="200.0">
         <children>
            <Label fx:id="startDateLabel" text="startdate" />
            <Label fx:id="middleDateLabel" text="middledate" />
            <Label fx:id="endDateLabel" text="enddate" />
         </children>
         <padding>
            <Insets bottom="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" spacing="100.0">
         <children>
            <Button fx:id="playButton" mnemonicParsing="false" text="Play">
               <graphic>
                  <ImageView fx:id="playIcon" fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../res/baseline_play_arrow_black_24dp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="pauseButton" mnemonicParsing="false" text="Pause">
               <graphic>
                  <ImageView fx:id="pauseIcon" fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../res/baseline_pause_black_24dp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <Button fx:id="stopButton" alignment="CENTER" mnemonicParsing="false" text="Stop">
               <graphic>
                  <ImageView fx:id="stopIcon" fitHeight="10.0" fitWidth="10.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../res/baseline_stop_black_24dp.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </children>
</VBox>
